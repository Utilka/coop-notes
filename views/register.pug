extends layout

block main
    .container
        h1 Register Page
        p.lead Say something worthwhile here.
        br
        form(role='form', action="/user/register",method="post", style='max-width: 300px;')
            .form-group
                input.form-control(type='text', name="nick", placeholder='Enter Username')
            .form-group
                input.form-control(type='password', name="password", placeholder='Password')
            button.btn.btn-default(type='submit') Submit
        a(href='/')
            button.btn.btn-primary(type="button") Cancel